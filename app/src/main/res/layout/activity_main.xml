<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- 시나리오 1. 결제기기화면 버튼이 첫 번째 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMember"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="시나리오 1. 결제기기화면"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnOrder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp"
        android:textSize="20sp"
        android:elevation="4dp"
        android:backgroundTint="?attr/colorSecondary"
        android:textColor="@android:color/white"
        app:icon="@drawable/ic_baseline_people_24"
        app:iconPadding="8dp"
        app:iconGravity="textStart" />

    <!-- 시나리오 2. 고객 핸드폰 버튼이 두 번째 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="시나리오 2. 고객 핸드폰"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnMember"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="0dp"
        android:textSize="20sp"
        android:elevation="4dp"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@android:color/white"
        app:icon="@drawable/ic_baseline_shopping_cart_24"
        app:iconPadding="8dp"
        app:iconGravity="textStart" />

</androidx.constraintlayout.widget.ConstraintLayout>
